{
  "name": "default",
  "type": "sqlite",
  "database": "src/db/development.sqlite",
  "autoSchemaSync": true,
  "entities": [
    "src/entity/*.ts"
  ],
  "migrations": [
    "src/db/migrations/*.ts"
  ],
  "logging": {
    "logQueries": true
  },
  "cli": {
    "entitiesDir": "src/entity",
    "migrationsDir": "src/db/migrations"
  }
}
