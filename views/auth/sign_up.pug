extends ../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        form(method='POST' action='/auth/sign_up')
          div.form-group
            label(for='firstname') First name
            input.form-control(type='text'placeholder='First name' name='firstname')
          div.form-group
            label(for='lastname') Last name
            input.form-control(type='text' placeholder='Last name' name='lastname')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' placeholder='example@example.com' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' placeholder='Password' name='password')
          div.form-group
            label(for='confirmpassword') Confirm password
            input.form-control(type='password'  placeholder='Confirm password' name='confirmpassword')
          button.btn.btn-primary(type='submit') Register
